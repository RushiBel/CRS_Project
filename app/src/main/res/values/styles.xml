<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textInputStyle">@style/AppTextField</item>
    </style>

    <!-- Bottom navigation menu -->
    <style name="AppTheme.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/unineue_bold</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="itemBackground">@color/white</item>
        <item name="itemTextColor">@color/bottom_navigation_colors</item>
        <item name="itemIconTint">@color/bottom_navigation_colors</item>
    </style>

    <style name="AppTheme.BottomNavigationItemTextAppearanceActive" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/unineue_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.BottomNavigationItemTextAppearanceInactive" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/unineue_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxBackgroundColor">@android:color/white</item>
    </style>

</resources>
