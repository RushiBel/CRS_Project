<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".presentation.view.home.surveyRecord.SurveyFragment">

    <data>
        <variable
            name="viewModel"
            type="com.orendasoftware.crs.presentation.view_models.home.quarantine.QuarantineViewModel" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAddQuarantine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_plus"
            android:layout_marginBottom="10dp">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/quarantine_recycler_view"
            android:layout_below="@+id/btnAddQuarantine"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/layout_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="22dp"
            android:background="@drawable/filter_border"
            android:paddingStart="10dp"
            android:paddingTop="6dp"
            android:paddingEnd="12dp"
            android:paddingBottom="6dp"
            tools:ignore="RelativeOverlap">

            <ImageView
                android:id="@+id/img_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_filter"
                android:foregroundGravity="right"
                tools:ignore="contentDescription" />

            <TextView
                android:id="@+id/txt_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_filter"
                android:fontFamily="@font/unineue_bold"
                android:gravity="end"
                android:text="Filter"
                android:paddingTop="4dp"
                android:textSize="14sp" />

        </RelativeLayout>
    </RelativeLayout>

</layout>