<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.view.home.BaseActivity">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigationMenu"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:theme="@style/AppTheme.BottomNavigationView"
            app:itemBackground="@color/white"
            app:itemTextAppearanceActive="@style/AppTheme.BottomNavigationItemTextAppearanceActive"
            app:itemTextAppearanceInactive="@style/AppTheme.BottomNavigationItemTextAppearanceInactive"
            app:labelVisibilityMode="labeled" />

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/navigationMenu"/>

    </RelativeLayout>

</layout>